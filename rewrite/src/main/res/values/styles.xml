<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="BaseTheme" parent="AppTheme">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@color/dialog_bg</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="Theme.MaterialComponents.DayNight.BottomSheetDialog">
        <item name="android:colorBackground">@color/dialog_bg</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@color/dialog_bg</item>
        <item name="android:windowIsFloating">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:colorEdgeEffect">@color/colorPrimary</item>
    </style>

    <style name="Chip" parent="@style/Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/chip_background_color</item>
        <item name="android:textColor">@color/chip_text_color</item>
    </style>

    <style name="ChipSelection" parent="Chip">
        <item name="chipMinHeight">@dimen/button_size_small</item>
        <item name="checkedIconTint">@color/chip_text_color</item>
    </style>

    <style name="TabText" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ButtonCircle" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="SplashTheme" parent="BaseTheme">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <style name="ButtonClose" parent="Widget.MaterialComponents.Button.OutlinedButton.Icon">
        <item name="strokeWidth">0dp</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:layout_width">@dimen/button_size_medium</item>
        <item name="android:layout_height">@dimen/button_size_medium</item>
        <item name="android:contentDescription">@string/content_description_close_fragment</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textColor">?attr/colorControlNormal</item>
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="cornerRadius">@dimen/corner_radius_large</item>
        <item name="icon">@drawable/ic_close</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">0dp</item>
        <item name="iconSize">24dp</item>
        <item name="iconTint">@color/color_button_close</item>
    </style>
</resources>
