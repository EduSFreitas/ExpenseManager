<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/padding_extra_small">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/txt_value_1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_caption"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Used: $345.67" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/txt_value_2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_caption"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="@id/txt_value_1"
        app:layout_constraintTop_toBottomOf="@id/txt_value_1"
        tools:text="Remaining: $154.33"
        tools:visibility="visible" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/txt_value_3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_caption"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/progress"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="$500"
        tools:visibility="visible" />

    <ProgressBar
        android:id="@+id/progress"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:indeterminate="false"
        android:padding="@dimen/padding_extra_small"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_value_2"
        tools:progress="54" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/txt_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_body1"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/progress"
        tools:text="Entertainment" />

</androidx.constraintlayout.widget.ConstraintLayout>
