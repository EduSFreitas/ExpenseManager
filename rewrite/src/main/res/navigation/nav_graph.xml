<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/fragment_expenses">

    <fragment android:id="@+id/fragment_expenses" >
        <action
            android:id="@+id/action_fragment_expenses_to_fragment_settings"
            app:destination="@id/fragment_settings" />
        <action
            android:id="@+id/action_fragment_expenses_to_fragment_add_expense"
            app:destination="@id/fragment_add_expense" />
    </fragment>
    <fragment android:id="@+id/fragment_settings" >
        <action
            android:id="@+id/back_from_settings"
            app:destination="@+id/fragment_expenses"
            app:popUpTo="@+id/fragment_expenses"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment android:id="@+id/fragment_add_expense" >
        <action
            android:id="@+id/back_from_add_expense"
            app:destination="@+id/fragment_expenses"
            app:popUpTo="@+id/fragment_expenses"
            app:popUpToInclusive="true" />
    </fragment>
</navigation>
