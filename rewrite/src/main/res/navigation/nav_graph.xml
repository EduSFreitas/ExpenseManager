<?xml version="1.0" encoding="utf-8"?>
<navigation android:id="@+id/nav_graph"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@id/fragment_expenses">

    <fragment
        android:id="@+id/fragment_expenses"
        android:label="@string/expenses"
        android:name="com.ramitsuri.expensemanagerrewrite.ui.fragment.ExpensesFragment"
        tools:layout="@layout/fragment_expenses">

        <action
            android:id="@+id/nav_action_settings"
            app:destination="@id/fragment_settings"
            />

        <action
            android:id="@+id/nav_action_add_expense"
            app:destination="@id/fragment_add_expense"
            />

    </fragment>

    <fragment
        android:id="@+id/fragment_settings"
        android:label="@string/settings"
        android:name="com.ramitsuri.expensemanagerrewrite.ui.fragment.SettingsFragment"
        tools:layout="@layout/fragment_settings">

        <action
            android:id="@+id/nav_action_back_settings"
            app:destination="@+id/fragment_expenses"
            app:popUpTo="@+id/fragment_expenses"
            app:popUpToInclusive="true" />

    </fragment>

    <fragment
        android:id="@+id/fragment_add_expense"
        android:name="com.ramitsuri.expensemanagerrewrite.ui.fragment.AddExpenseFragment"
        android:label="@string/add_expense"
        tools:layout="@layout/fragment_add_expense">

        <action
            android:id="@+id/nav_action_back_add_expense"
            app:destination="@+id/fragment_expenses"
            app:popUpTo="@+id/fragment_expenses"
            app:popUpToInclusive="true" />

    </fragment>
</navigation>
