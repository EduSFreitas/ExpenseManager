<?xml version="1.0" encoding="utf-8"?>
<navigation android:id="@+id/nav_graph"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@id/fragment_expenses">

    <fragment
        android:id="@+id/fragment_expenses"
        android:name="com.ramitsuri.expensemanagerrewrite.ui.fragments.ExpensesFragment"
        tools:layout="@layout/fragment_expenses">

        <action
            android:id="@+id/action_fragment_expenses_to_fragment_settings"
            app:destination="@id/fragment_settings"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim" />

        <action
            android:id="@+id/action_fragment_expenses_to_fragment_add_expense"
            app:destination="@id/fragment_add_expense"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"  />

    </fragment>

    <fragment
        android:id="@+id/fragment_settings"
        android:name="com.ramitsuri.expensemanagerrewrite.ui.fragments.SettingsFragment"
        tools:layout="@layout/fragment_settings">

        <action
            android:id="@+id/back_from_settings"
            app:destination="@+id/fragment_expenses"
            app:popUpTo="@+id/fragment_expenses"
            app:popUpToInclusive="true" />

    </fragment>

    <fragment
        android:id="@+id/fragment_add_expense"
        android:name="com.ramitsuri.expensemanagerrewrite.ui.fragments.AddExpenseFragment"
        tools:layout="@layout/fragment_add_expense">

        <action
            android:id="@+id/back_from_add_expense"
            app:destination="@+id/fragment_expenses"
            app:popUpTo="@+id/fragment_expenses"
            app:popUpToInclusive="true" />

    </fragment>
</navigation>
